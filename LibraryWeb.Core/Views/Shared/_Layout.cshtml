@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery-3.7.0.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/js/dataWork.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
                <a class="navbar-brand" icon="~/favicon.ico">Онлайн-библиотека</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Переключатель навигации">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ссылка</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Выпадающий список
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Действие</a></li>
                                <li><a class="dropdown-item" href="#">Другое действие</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Что-то еще здесь</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Отключенная</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Поиск" aria-label="Поиск">
                        <button class="btn btn-outline-success" type="submit">Поиск</button>
                    </form>
                    <!-- Кнопка-триггер модального окна -->
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-warning dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Профиль
                        </button>
                        <ul class="dropdown-menu">
                            <div class="container">
                                <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Авторизация
                                </button>
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Избранное
                                </button>
                            </div>
                        </ul>

                        <!-- Модальное окно -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-centred">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title" id="exampleModalLabel">Авторизация</h1>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="mb-3">
                                                <label for="input-form-email" class="form-label">Адрес электронной почты</label>
                                                <input type="email" class="form-control" id="input-form-email" aria-describedby="emailHelp">
                                                <div id="emailHelp" class="form-text">Мы никогда никому не передадим вашу электронную почту.</div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="input-form-password" class="form-label">Пароль</label>
                                                <input type="password" class="form-control" id="input-form-password">
                                            </div>
                                            <button type="submit" class="btn btn-primary" id="btn-form-done">Отправить</button>
                                        </form>
                                        <a class="btn btn-primary" data-bs-toggle="modal" href="#exampleModal" role="button">Открыть первое модальное окно</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-centred">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title" id="exampleModalLabel">Регистрация</h1>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="mb-3">
                                                <label for="input-form-email" class="form-label">Адрес электронной почты</label>
                                                <input type="email" class="form-control" id="input-form-email" aria-describedby="emailHelp">
                                                <div id="emailHelp" class="form-text">Мы никогда никому не передадим вашу электронную почту.</div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="input-form-password" class="form-label">Пароль</label>
                                                <input type="password" class="form-control" id="input-form-password">
                                            </div>
                                            <button type="submit" class="btn btn-primary" id="btn-form-done">Отправить</button>
                                        </form>
                                        <a class="btn btn-primary" data-bs-toggle="modal" href="#exampleModal" role="button">Открыть первое модальное окно</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <footer>
        <nav class="navbar fixed-bottom bg-body-tertiary">
            <div class="container-fluid">
                <p>Мы в социальных сетях</p>
                <a class="navbar" href="https://t.me/loodriver">Telegram</a>
            </div>
        </nav>
    </footer>
</body>
</html>
